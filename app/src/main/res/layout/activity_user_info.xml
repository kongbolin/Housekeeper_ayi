<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorMain"
            android:layout_height="68dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="个人信息详情"
                android:textColor="@color/colorWhite"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:paddingBottom="12dp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_update_info_back"
                android:layout_width="36dp"
                android:background="@mipmap/back"
                android:layout_alignParentBottom="true"
                android:padding="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="4dp"
                android:layout_height="36dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="48dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="用户名:"
                android:textSize="16dp"
                android:id="@+id/tv_update_psw1"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_update_info_name"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_update_psw1"
                android:layout_width="match_parent"
                android:background="#ffffffff"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorLine"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="48dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="性别:"
                android:textSize="16dp"
                android:id="@+id/tv_update_psw2"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_update_info_sex"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_update_psw2"
                android:layout_width="match_parent"
                android:background="#ffffffff"
                android:layout_marginLeft="6dp"
                android:textSize="16dp"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorLine"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="48dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="电话号码:"
                android:textSize="16dp"
                android:id="@+id/tv_update_psw3"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_update_info_phone"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_update_psw3"
                android:layout_width="match_parent"
                android:background="#ffffffff"
                android:layout_marginLeft="6dp"
                android:textSize="16dp"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorLine"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="48dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="年龄:"
                android:textSize="16dp"
                android:id="@+id/tv_update_psw4"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_update_info_age"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_update_psw4"
                android:layout_width="match_parent"
                android:background="#ffffffff"
                android:layout_marginLeft="6dp"
                android:textSize="16dp"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorLine"></View>
    </LinearLayout>
    <Button
        android:id="@+id/button_update_info"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_login_style"
        android:text="保存修改"
        android:textColor="#fff"
        android:textSize="20sp" />
</LinearLayout>