<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/img_login_backgroud"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_rg_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:src="@mipmap/fanhui" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/editview_login_style"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_reg_name"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="#00ffffff"
            android:ems="11"
            android:hint="设置昵称"
            android:inputType="text"
            android:textColorHint="@color/light_gray"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/editview_login_style"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_reg_phone"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="#00ffffff"
            android:ems="11"
            android:hint="输入你的手机号"
            android:inputType="number"
            android:textColorHint="@color/light_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/editview_login_style"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_reg_password"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="#00ffffff"
            android:ems="11"
            android:hint="设置密码"
            android:inputType="textPassword"
            android:textColorHint="@color/light_gray"></EditText>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/edit_reg_yzm"
            android:layout_width="148dp"
            android:layout_height="fill_parent"
            android:background="@drawable/editview_login_style"
            android:ems="11"
            android:hint="验证码"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColorHint="@color/light_gray"></EditText>

        <TextView
            android:id="@+id/text_reg_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="获取验证码"
            android:textColor="@color/colorMain" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_register"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_login_style"
        android:text="注册"
        android:textColor="@color/colorWhite"
        android:textSize="22sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="点击“注册”即默认同意条款"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_xieyi_content"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="《阿姨来了用户使用条款》"
        android:textColor="@color/colorMain"
        android:textSize="12sp" />

    -->

</LinearLayout>