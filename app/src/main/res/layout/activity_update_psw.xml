<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorBg"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/colorMain"
    android:layout_height="68dp">
    <TextView
        android:layout_width="wrap_content"
        android:text="修改密码"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:paddingBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_update_psw_update"
        android:layout_width="36dp"
        android:background="@mipmap/back"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="4dp"
        android:layout_height="36dp" />
</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_height="48dp">
    <TextView
        android:layout_width="wrap_content"
        android:text="原始密码:"
        android:textSize="16dp"
        android:id="@+id/tv_update_psw1"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_update_psw1"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_update_psw1"
        android:layout_width="match_parent"
        android:background="#ffffffff"
        android:textSize="16dp"
        android:layout_marginLeft="6dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/colorLine"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="48dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="修改密码:"
            android:textSize="16dp"
            android:id="@+id/tv_update_psw2"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_update_psw2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_update_psw2"
            android:layout_width="match_parent"
            android:background="#ffffffff"
            android:layout_marginLeft="6dp"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/colorLine"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="48dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="确认密码:"
            android:textSize="16dp"
            android:id="@+id/tv_update_psw3"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_update_psw3"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_update_psw3"
            android:layout_width="match_parent"
            android:background="#ffffffff"
            android:layout_marginLeft="6dp"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/colorLine"></View>
    </LinearLayout>
    <Button
        android:id="@+id/button_update_psw"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_login_style"
        android:text="保存修改"
        android:textColor="#fff"
        android:textSize="20sp" />
</LinearLayout>