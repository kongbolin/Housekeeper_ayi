<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/colorMain">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="12dp"
            android:text="关于我们"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_about_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:background="@mipmap/back"
            android:padding="12dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@mipmap/icon1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="V1.0.7"
            android:textColor="@color/colorMain"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/about_rl_lianxi"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="25dp"
            android:background="@color/colorWhite">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:text="联系我们"
                android:textColor="#000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/list_icon_more_normal" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:id="@+id/adout_line"
            android:layout_below="@+id/about_rl_lianxi"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorLine"></View>

        <RelativeLayout
            android:id="@+id/about_rl_update"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorWhite"
            android:layout_below="@+id/adout_line">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:text="检查更新"
                android:textColor="#000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/list_icon_more_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_copy_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="copyright"
                android:textColor="@color/colorFont"
                android:textSize="12sp" />

            <ImageView
                android:layout_marginTop="2dp"
                android:id="@+id/iv_copy_1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
               android:layout_alignTop="@+id/tv_copy_1"
                android:layout_toRightOf="@+id/tv_copy_1"
                android:src="@mipmap/copyright" />

            <TextView
                android:id="@+id/tv_copy_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_copy_1"
                android:text="2016-2017 Housekeeper."
                android:textColor="@color/colorFont"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_copy_1"
                android:layout_centerHorizontal="true"
                android:text="All Rights Reserved"
                android:textColor="@color/colorFont"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>