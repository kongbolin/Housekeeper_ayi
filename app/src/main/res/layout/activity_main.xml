<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    tools:context="com.edu.xhu.housekeeper.activity.MainActivity">
    <!--android:fitsSystemWindows="true"-->
    <!--android:clipToPadding="true"-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_line" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorLine"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp" />

    <LinearLayout
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="4dp"
        android:background="@color/colorBg"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_main"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/home" />

            <TextView
                android:id="@+id/tv_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_main"
                android:layout_centerHorizontal="true"
                android:text="首页"
                android:textSize="12dp"
                android:textColor="@color/colorTool" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_margin="3dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/order" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_type"
                android:layout_centerHorizontal="true"
                android:text="订单"
                android:textSize="12dp"
                android:textColor="@color/colorTool" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_usercenter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorBg"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_usercenter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/my" />

            <TextView
                android:id="@+id/tv_usercenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_usercenter"
                android:layout_centerHorizontal="true"
                android:text="个人中心"
                android:textSize="12dp"
                android:textColor="@color/colorTool" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>